<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping package="com.it.bean">
	<!-- 配置类名对应的表名 -->
	<class name="Customer" table="t_customer">
	
	<!-- 配置主属性对应的主键 -->
	<id name="cust_id"  column="cust_id">
	
	<!-- 主键形成的方式（assigned：程序员指定） -->
		<generator class="native"/>
	</id>
	
	<!-- 配置其他属性 -->
	<property name="cust_name" type="string" column="cust_name"/>
	<property name="cust_source" type="string" column="cust_source"/>
	<property name="cust_industry" type="string" column="cust_industry"/>
<!-- 	<property name="cust_level" type="string" column="cust_level"/> -->
	<property name="cust_phone" type="string" column="cust_phone"/>
	<property name="cust_mobile" type="string" column="cust_mobile"/>
	
	<!-- 配置客户与联系人一对多关系 -->
	<set name="set"  inverse="true"  cascade="delete">   
		<key column="clid"></key>
		<one-to-many class="com.it.bean.LinkMan"></one-to-many>
	
	</set>
	
	<!-- 表示多条拜访记录 -->
	<set name="setCus">
		<key column="cvid"></key>
		<one-to-many class="com.it.bean.Visit"></one-to-many>
	</set>
	
	<!-- 所属级别 -->
	<many-to-one name="dictCusLevel" class="com.it.bean.Dict" column="cdid"></many-to-one>	
	</class>
</hibernate-mapping>