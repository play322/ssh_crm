<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping package="com.it.bean">
	<!-- 配置类名对应的表名 -->
	<class name="Visit" table="t_visit">
	
	<!-- 配置主属性对应的主键 -->
	<id name="vid"  column="vid">
	
	<!-- 主键形成的方式（assigned：程序员指定） -->
		<generator class="native"/>
	</id>
	
	<!-- 配置其他属性 -->
	<property name="vaddress" type="string" column="vaddress"/>
	<property name="vcontent" type="string" column="vcontent"/>
	
	<!-- 拜访所属用户 -->
	<many-to-one name="user" class="com.it.bean.User" column="uvid"/>
	
	<!-- 拜访所属客户 -->
	<many-to-one name="customer" class="com.it.bean.Customer" column="cvid"/>
	</class>
</hibernate-mapping>